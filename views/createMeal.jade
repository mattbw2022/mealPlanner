extends layout
block styles 
    link(rel="stylesheet", href="/stylesheets/addMeal.css")
block scripts
    script(src="/javascripts/frontEnd.js") 
block content 
    - var ingredientsHelper = 'Example:\n1 large egg\n½ teaspoon salt\n½ teaspoon ground black pepper\n1 pound ground beef\n½ cup fine dry bread crumbs'
    - var instructionsHelper = 'Example:\n1)Make patties\n2)cook\n3)eat'
    h1 createMeal
    form#newMeal(action="/meals/createMeal", method="post", enctype="multipart/form-data")
        h2 Meal Title 
        input(type="text", name="title")
        if noTitle === true 
            p.err-msg A meal title is required.
        if isDuplicate === true
            p.err-msg The meal title entered already exists, please choose another name.
        h2 Ingredients
        textarea#ingredients(name="ingredients", cols="30", rows="10", placeholder=ingredientsHelper)
        if noIngredients === true
            p.err-msg Ingredients are required.
        h2 Cooking Instructions 
        textarea#cookingInstruction(name="directions", cols="30", rows="10", placeholder=instructionsHelper)
        if noDirections === true 
            p.err-msg Instructions are required.
        h2 Tags (Optional)
        div#tag-container
            div.tag-type-container
                h3 Cuisine
                for cuisine in cuisineTags
                    div.checklist
                        input(type="checkbox", value=cuisine.id, name="tags") 
                        label=cuisine.name
            div.tag-type-container 
                h3 Time
                for time in timeTags
                    div.checklist
                        input(type="checkbox", value=time.id, name="tags") 
                        label=time.name
            div.tag-type-container
                h3 Difficulty
                for difficulty in difficultyTags
                    div.checklist
                        input(type="checkbox", value=difficulty.id, name="tags") 
                        label=difficulty.name
            div.tag-type-container 
                h3 Category
                for category in categoryTags
                    div.checklist
                        input(type="checkbox", value=category.id, name="tags") 
                        label=category.name            
                

        h2 Add a picture 
        <input type = "file" name = "image" accept = "image/*" />
        button(type="submit") Add Meal
       