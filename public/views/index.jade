extends layout
block styles 
    link(rel="stylesheet", href="/stylesheets/index.css")
block scripts
    script(src="/javascripts/index.js")  
block content
  body
  #intro 
    h2 Pick, plan and add recipes. Then create custom lists and add ingredients from recipes!
  a(href="/register")#sign-up-btn
    button(type="button") Sign Up! 
  #features-section
    img(src="/images/features.png", alt="feature collage")
  section
    #random-recipe-container
      #random-btn-container
        h3 Need an Idea?
        button#random-recipe-btn(type="button") Get a Random recipe
      #placeholder
        img(src="/images/question-mark.png", alt="Question Mark") 
      each recipe, i in options.recipes
        a#random-recipe-link(href="/recipes/individualrecipe/" + recipe.id class="recipe-card-" + i +" recipe-card")
          p.recipe-title=recipe.title
          img.recipe-img( src=recipe.image, alt=recipe.title)
    .fresh-recipes-container(id='scrollbar1') 
      h2 Fresh Recipes 
      each newRecipe in options.newRecipes
        a(href="/recipes/individualrecipe/" + newRecipe.id).fresh-recipe
          .fresh-recipe-info
            p(class="fresh-bold")=newRecipe.title
            p Created by 
              span(class="fresh-bold")=newRecipe.userInfo.username
            p=newRecipe.userInfo.date
            img.credit-img(src=newRecipe.userInfo.image, alt="User Picture")
          img.fresh-recipe-img(src=newRecipe.image, alt=newRecipe.title)
