extends layout
block styles 
    link(rel="stylesheet", href="/stylesheets/newList.css")
block scripts
    script(src="/javascripts/newList.js") 
block content 
    form(action="/lists/updateList/" + options.list.title  method="post")#new-list-form 
        h2 List Title
        .input-container
            input#title(type="text" name="title" value=options.list.title)
        h2 List Items 
        #items
            for item in options.list.items
                #item-container
                        .input-container
                            label(for="quantity") Qty 
                            input.quantity(type="number" name="quantities" min='0' class="small-input" value=item.quantity)
                        .input-container
                            label(for="unit") Unit
                            input.unit(type="text" name="units" class="small-input" value=item.unit)
                        .input-container 
                            label(for="ingredients") Item
                            input.item(type="text" name="items" value=item.item)
                        button.remove-item(type="button") Delete
        button#add-item(type="button") Add Item
    button#create-list(type="submit" form="new-list-form") Update List
    

